<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_icon_navi_btn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onClick"
    android:orientation="vertical"
    android:paddingTop="@dimen/home_item_top_pad"
    android:paddingLeft="@dimen/home_item_left_pad" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_item_rect"
        android:background="@color/home_item_bgd_color"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/home_more_item_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/new_home_icon_dhua" />

        <TextView
            android:id="@+id/home_more_item_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="23sp"
            android:text="@string/home_more_fm"
            android:textColor="@color/home_text_color" />
    </LinearLayout>

</LinearLayout>