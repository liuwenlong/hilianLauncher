<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_background_color"
        android:orientation="vertical"
        android:paddingBottom="@dimen/homepage_left_margin"
        android:paddingLeft="@dimen/homepage_left_margin"
        android:paddingRight="@dimen/homepage_right_margin"
        android:paddingTop="@dimen/homepage_top_margin"
        tools:context="com.example.cloudmirror.ui.MainActivity" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <include
                android:id="@+id/function_item_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                layout="@layout/mg_mian_item"
                android:paddingLeft="@dimen/home_item_left_pad" />

             <include
                android:id="@+id/function_item_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                layout="@layout/mg_mian_item" />           

            <include
                android:id="@+id/function_item_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                layout="@layout/mg_mian_item" />

            <include
                android:id="@+id/function_item_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                layout="@layout/mg_mian_item" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:baselineAligned="false" >

            <include
                android:id="@+id/function_item_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                layout="@layout/mg_mian_item"
                android:paddingLeft="@dimen/home_item_left_pad" />

            <include
                android:id="@+id/function_item_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                layout="@layout/mg_mian_item"
                android:paddingLeft="@dimen/home_item_left_pad" />

            <include
                android:id="@+id/function_item_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                layout="@layout/mg_mian_item" />

            <include
                android:id="@+id/function_item_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                layout="@layout/mg_mian_item" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>