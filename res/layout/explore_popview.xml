<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="210dip"
    android:layout_height="wrap_content"
    android:background="@drawable/qipao" >

    <RelativeLayout
        android:id="@+id/tishi_info"
        android:layout_width="210dip"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/tx_tishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/map_bubbleImage2"
            android:singleLine="true"
            android:textColor="#000055"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/map_bubbleImage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/close" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/my_image"
        android:layout_width="210dip"
        android:layout_height="2dip"
        android:layout_below="@+id/tishi_info"
        android:src="@drawable/group_divider" >
    </ImageView>

    <LinearLayout
        android:id="@+id/my_location2"
        android:layout_width="210dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_image"
        android:layout_marginBottom="0.5dip"
        android:layout_marginTop="0.5dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/car_location2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话: "
            android:textColor="#0000aa"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="180dip"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusable="true"
            android:paddingLeft="2dip"
            android:singleLine="true"
            android:textColor="#000055"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_location3"
        android:layout_width="210dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_location2"
        android:layout_marginBottom="0.5dip"
        android:layout_marginTop="0.5dip"
        android:gravity="center|left"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="left|top"
            android:text="位置: "
            android:textColor="#0000aa"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_location_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:textColor="#000055"
            android:textSize="15sp" />

        <ProgressBar
            android:id="@+id/pb_adress"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:visibility="gone" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_pop_rout"
        android:layout_width="75dip"
        android:layout_height="20dip"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/my_location3"
        android:background="@color/transparent"
        android:focusable="true"
        android:text="[到这里去]"
        android:textColor="#0000aa"
        android:textSize="15sp" />

</RelativeLayout>